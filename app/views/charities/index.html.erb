<div class="container">
  <br>
  <%= link_to '/' do %>
    <h3>Back to Home</h3>
  <% end %>
  <br>

  <div class="px-5 pt-5 mt-5">
    <div class="row px-1 pb-5 justify-content-around">
      <% @charities.each do |charity| %>

        <%= link_to charity_path(charity) do %>
          <div class="pb-5 col-sm-6 col-md-4 ">
            <div class="border charity-card-container ">
              <div class="charity-logo">
                <%= cl_image_tag charity.photo.key, height: 171, width: 222, crop: :pad %>
              </div>
              <div class="charity-text-box">
                <div class="header-3">
                  <%= charity.name %>
                </div>
                <div class="category pt-3">
                  <%= charity.category %>
                </div>
              </div>
              <div class="donation">
                Donate
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

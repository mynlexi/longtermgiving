<%= simple_form_for([@charity, @donation]) do |f| %>
  <%=@price%>
  <%= f.input :quantity, input_html: { min: 1 } %>
  <%= f.input :asset_id, as: :hidden, :input_html => { :value => @asset.id } %>
  <%= f.input :donation_amount %>
  <%#= check for donation amount > price*quantity %>
  <%= f.submit "Submit", disable_with: 'Submiting...' %>
<% end %>

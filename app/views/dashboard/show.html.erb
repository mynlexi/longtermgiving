<h1>Favourites</h1>
<% @favourites.each do |favourite| %>
    <ul>
        <li>
            <%= favourite.charity.name %>
        </li>
    </ul>
<% end %>

<h1>History</h1>
<% @donations.each do |donation| %>
    <ul>
        <li>
            <%= donation.charity.name %>
        </li>
        <li>
            <%= donation.asset.stock_symbol %>
        </li>
        <li>
            <%= donation.quantity %>
        </li>
        <li>
            <%= donation.donation_amount %>
        </li>
    </ul>
<% end %>

<div class="container-favourites">
  <h1>Favourites</h1>
  <%  favchar = @favourites.map do |favourite| %>
    <% favourite.charity %>
  <% end %>
  <% if favchar.empty? %>
    <p> Here you can add your favourite charities </p>
  <% else %>
    <%= render 'shared/charity_card', charities: favchar %>
  <% end %>
</div>


<h1>History</h1>
<div class="container-history">
  <% @donations.reverse.each do |donation| %>
    <div class="history-card">
     | <%= donation.created_at.to_date %> |
      <%= donation.charity.name %>
      <%= donation.asset.stock_symbol %> |
      <%= donation.quantity %> |
      <%= donation.donation_amount %> |
      <%= donation.order_status %> |
    </div>
  <% end %>
  <% if @donations.empty? %>
  <p> Your donations will be displayed here </p>
  <% end %>
</div>
